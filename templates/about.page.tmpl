{{template "base" .}}

{{define "content"}}
<!-- Hero -->
<header class="hero">
  <div class="container text-center text-lg-start">
    <span class="badge rounded-pill px-3 py-2 mb-3 shadow-soft"
      >About • Milo’s Residence</span
    >
    <h1 class="fw-bold">Meet Milo & the Residence</h1>
    <p class="lead mb-0">
      A cozy, cat-centric haven where sunbeams are plentiful, naps are sacred,
      and every windowsill is first-class Bird TV. Humans welcome to supervise
      with tea.
    </p>
  </div>
</header>

<!-- Milo intro -->
<section class="py-5">
  <div class="container">
    <div class="row g-4 align-items-center">
      <div class="col-md-4 text-center">
        <img
          src="/static/images/milo-avatar.png"
          alt="Milo, the resident cat, sitting regally by a sunlit window"
          class="rounded-circle shadow-soft"
          width="220"
          height="220"
          loading="lazy"
          decoding="async"
        />
        <div class="mt-3 small text-secondary">
          <i class="bi bi-patch-check-fill text-success me-1"></i>Resident floof
          • Head of Hospitality
        </div>
      </div>
      <div class="col-md-8">
        <h2 class="fw-bold mb-3">Who is Milo?</h2>
        <p class="mb-3">
          Milo curates the vibe: warm light, soft textures, dignified lounging.
          He personally inspects luggage, windowsills, and blanket fluff to
          ensure optimal loafing conditions.
        </p>
        <div class="row g-3">
          <div class="col-sm-4">
            <div class="p-3 border border-subtle rounded-4 h-100">
              <div class="small text-secondary">Favorite Snooze</div>
              <div class="fw-semibold">Hay Bale Sunbeam</div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="p-3 border border-subtle rounded-4 h-100">
              <div class="small text-secondary">Snack of Choice</div>
              <div class="fw-semibold">Crunchy Tuna Bites</div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="p-3 border border-subtle rounded-4 h-100">
              <div class="small text-secondary">Hobbies</div>
              <div class="fw-semibold">Bird TV, Loafing, Zoomies</div>
            </div>
          </div>
        </div>
        <div class="mt-4">
          <a href="/search-availability" class="btn btn-accent">
            <i class="bi bi-calendar2-week me-2"></i>Check Availability
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Our story -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row g-4 align-items-center">
      <div class="col-lg-6 order-lg-2">
        <div class="ratio ratio-16x9 rounded-4 overflow-hidden shadow-soft">
          <img
            src="/static/images/story-barn-window.jpg"
            class="w-100 h-100"
            alt="Sunlight streaming through the barn window onto a tidy hay bale"
            loading="lazy"
            decoding="async"
            style="object-fit: cover"
          />
        </div>
      </div>
      <div class="col-lg-6">
        <h2 class="fw-bold mb-3">Our Story</h2>
        <p class="text-secondary mb-3">
          Milo’s Residence began as a simple mission: celebrate slow mornings
          and soft landings. We tuned the space for cat-level comfort—quiet
          corners, sunlit ledges, and a steady supply of serenity.
        </p>
        <ul class="list-unstyled small">
          <li class="mb-2">
            <i class="bi bi-sun me-2 text-primary"></i>Afternoon sunbeams
            (1–4pm) calibrated for premium catnaps
          </li>
          <li class="mb-2">
            <i class="bi bi-broadcast me-2 text-primary"></i>Reliable Wi-Fi for
            humans; premium Bird TV for supervisors
          </li>
          <li class="mb-2">
            <i class="bi bi-tree me-2 text-primary"></i>Close to
            riverwalk—approved for contemplative whisker twitching
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- House values -->
<section class="py-5">
  <div class="container">
    <h2 class="fw-bold mb-4">House Values</h2>
    <div class="row g-4">
      <div class="col-md-3">
        <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
          <div class="amenity mb-2"><i class="bi bi-bell-slash"></i></div>
          <h6 class="fw-semibold mb-1">Quiet & Calm</h6>
          <p class="mb-0 text-secondary">
            Naps are sacred; whispers are welcome.
          </p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
          <div class="amenity mb-2"><i class="bi bi-emoji-smile"></i></div>
          <h6 class="fw-semibold mb-1">Cozy First</h6>
          <p class="mb-0 text-secondary">
            Soft textures, warm light, and generous cushions.
          </p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
          <div class="amenity mb-2"><i class="bi bi-shield-check"></i></div>
          <h6 class="fw-semibold mb-1">Gentle Care</h6>
          <p class="mb-0 text-secondary">
            Clean, safe, and thoughtfully maintained.
          </p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
          <div class="amenity mb-2"><i class="bi bi-stars"></i></div>
          <h6 class="fw-semibold mb-1">Playful Spirit</h6>
          <p class="mb-0 text-secondary">
            A little whimsy keeps the whiskers curious.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Snooze spots preview (links to Rooms) -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="fw-bold mb-4">Signature Snooze Spots</h2>
    <div class="row g-4">
      <div class="col-md-4">
        <a href="/room1" class="text-decoration-none">
          <div class="p-3 border border-subtle rounded-4 shadow-soft h-100">
            <div class="ratio ratio-4x3 rounded-4 overflow-hidden mb-3">
              <img
                src="/static/images/room-haybale.jpg"
                alt="Hay bale sunbeam nook"
                class="w-100 h-100"
                style="object-fit: cover"
                loading="lazy"
                decoding="async"
              />
            </div>
            <h5 class="fw-semibold mb-1">Hay Bale Sunbeam</h5>
            <p class="small text-secondary mb-0">
              Warm, golden, and scientifically proven to induce loaf mode.
            </p>
          </div>
        </a>
      </div>
      <div class="col-md-4">
        <a href="/room2" class="text-decoration-none">
          <div class="p-3 border border-subtle rounded-4 shadow-soft h-100">
            <div class="ratio ratio-4x3 rounded-4 overflow-hidden mb-3">
              <img
                src="/static/images/room-windowperch.jpg"
                alt="Window perch with Bird TV"
                class="w-100 h-100"
                style="object-fit: cover"
                loading="lazy"
                decoding="async"
              />
            </div>
            <h5 class="fw-semibold mb-1">Window Perch Theater</h5>
            <p class="small text-secondary mb-0">
              Matinees daily: sparrows, leaves, and distant squirrels.
            </p>
          </div>
        </a>
      </div>
      <div class="col-md-4">
        <a href="/room3" class="text-decoration-none">
          <div class="p-3 border border-subtle rounded-4 shadow-soft h-100">
            <div class="ratio ratio-4x3 rounded-4 overflow-hidden mb-3">
              <img
                src="/static/images/room-laundrynook.jpg"
                alt="Laundry-basket nook with blankets"
                class="w-100 h-100"
                style="object-fit: cover"
                loading="lazy"
                decoding="async"
              />
            </div>
            <h5 class="fw-semibold mb-1">Laundry-Basket Nook</h5>
            <p class="small text-secondary mb-0">
              Cozy, crinkly, and perfect for post-zoomie cooldowns.
            </p>
          </div>
        </a>
      </div>
    </div>
    <div class="mt-4">
      <a href="/search-availability" class="btn btn-accent">
        <i class="bi bi-calendar2-check me-2"></i>See Dates
      </a>
    </div>
  </div>
</section>

<!-- The humans behind the snacks -->
<section class="py-5">
  <div class="container">
    <h2 class="fw-bold mb-3">The Humans</h2>
    <p class="text-secondary mb-4">
      Friendly caretakers who refill bowls, fluff blankets, and ensure the sun
      finds its way to the best spots. We love hosting—and we’re honored Milo
      lets us.
    </p>
    <div class="row g-4">
      <div class="col-sm-6 col-lg-4">
        <div
          class="p-3 border border-subtle rounded-4 h-100 d-flex align-items-center gap-3"
        >
          <img
            src="/static/images/human-1.jpg"
            alt="Caretaker portrait"
            class="rounded-4 shadow-soft"
            width="72"
            height="72"
            loading="lazy"
            decoding="async"
            style="object-fit: cover"
          />
          <div class="small">
            <strong>Ben</strong><br /><span class="text-secondary"
              >Chief Blanket Fluffer</span
            >
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-lg-4">
        <div
          class="p-3 border border-subtle rounded-4 h-100 d-flex align-items-center gap-3"
        >
          <img
            src="/static/images/human-2.jpg"
            alt="Caretaker portrait"
            class="rounded-4 shadow-soft"
            width="72"
            height="72"
            loading="lazy"
            decoding="async"
            style="object-fit: cover"
          />
          <div class="small">
            <strong>Sam</strong><br /><span class="text-secondary"
              >Treat Sommelier</span
            >
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-lg-4">
        <div
          class="p-3 border border-subtle rounded-4 h-100 d-flex align-items-center gap-3"
        >
          <img
            src="/static/images/human-3.jpg"
            alt="Caretaker portrait"
            class="rounded-4 shadow-soft"
            width="72"
            height="72"
            loading="lazy"
            decoding="async"
            style="object-fit: cover"
          />
          <div class="small">
            <strong>Riley</strong><br /><span class="text-secondary"
              >Bird TV Technician</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Photo credits band (subtle, lightweight) -->
<section class="py-3 bg-light border-top border-subtle">
  <div
    class="container d-flex flex-column flex-md-row align-items-center justify-content-between gap-2 small"
  >
    <div class="d-flex align-items-center gap-2">
      <i class="bi bi-camera"></i>
      <span
        ><strong>House Photography:</strong> shot in-house at Milo’s Residence;
        models: Milo & friends.</span
      >
    </div>
    <a href="/contact" class="text-decoration-underline"
      >Licensing & permissions</a
    >
  </div>
</section>

<!-- Compact FAQ (collapsed by default) -->
<section class="py-5">
  <div class="container">
    <h2 class="fw-bold mb-4">About FAQs</h2>
    <div class="accordion" id="about-faq">
      <div class="accordion-item">
        <h2 class="accordion-header" id="afq1">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#afa1"
            aria-expanded="false"
            aria-controls="afa1"
          >
            Can I meet Milo during my stay?
          </button>
        </h2>
        <div
          id="afa1"
          class="accordion-collapse collapse"
          data-bs-parent="#about-faq"
        >
          <div class="accordion-body">
            Likely! Milo enjoys polite introductions and gentle
            scritches—schedule permitting (sunbeam windows take priority).
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="afq2">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#afa2"
            aria-expanded="false"
            aria-controls="afa2"
          >
            Are the photos available for personal use?
          </button>
        </h2>
        <div
          id="afa2"
          class="accordion-collapse collapse"
          data-bs-parent="#about-faq"
        >
          <div class="accordion-body">
            Please ask first—we’re happy to consider personal, non-commercial
            use. For anything else, <a href="/contact">contact us</a>.
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="afq3">
          <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#afa3"
            aria-expanded="false"
            aria-controls="afa3"
          >
            What makes Milo’s Residence different?
          </button>
        </h2>
        <div
          id="afa3"
          class="accordion-collapse collapse"
          data-bs-parent="#about-faq"
        >
          <div class="accordion-body">
            Intentional coziness, reliable sunbeams, and a host who takes loaf
            science seriously. Also: excellent Bird TV.
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{ end }}
