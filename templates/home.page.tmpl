{{template "base" .}}

{{define "content"}}
  <!-- Hero -->
  <header class="hero">
    <div class="container text-center text-lg-end">
      <span class="badge rounded-pill px-3 py-2 mb-3 shadow-soft">Riverside • Sleeps 4 • Superhost</span>
      <h1 class="fw-bold">Milo's Residence</h1>
      <p class="lead mb-4">Modern comfort, sunlit views, and steps from trails & cafés.</p>
      <div class="d-flex gap-2 justify-content-center justify-content-lg-end">
        <a href="#book" class="btn btn-ghost-light btn-lg">
          <i class="bi bi-calendar2-check me-2"></i>Check Availability
        </a>
        <a href="#photos" class="btn btn-accent btn-lg">
          <i class="bi bi-images me-2"></i>View Photos
        </a>
      </div>
    </div>
  </header>

  <!-- Highlights -->
  <section class="py-5 section-highlights">
    <div class="container">
      <div class="row g-4">
        <div class="col-md-3">
          <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
            <div class="amenity mb-2"><i class="bi bi-wifi"></i></div>
            <h6 class="fw-semibold mb-1">Fast Wi-Fi</h6>
            <p class="mb-0 text-secondary">Perfect for remote work and streaming.</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
            <div class="amenity mb-2"><i class="bi bi-geo-alt"></i></div>
            <h6 class="fw-semibold mb-1">Walkable</h6>
            <p class="mb-0 text-secondary">5 min to river trail, cafés, and market.</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
            <div class="amenity mb-2"><i class="bi bi-door-open"></i></div>
            <h6 class="fw-semibold mb-1">Self Check-in</h6>
            <p class="mb-0 text-secondary">Smart lock for effortless arrivals.</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="p-4 border border-subtle rounded-4 shadow-soft h-100">
            <div class="amenity mb-2"><i class="bi bi-car-front"></i></div>
            <h6 class="fw-semibold mb-1">Free Parking</h6>
            <p class="mb-0 text-secondary">On-site private space included.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Photos / Carousel -->
  <section id="photos" class="py-5 bg-light">
    <div class="container">
      <div class="row align-items-center g-4">
        <div class="col-lg-6">
          <div id="gallery" class="carousel carousel-fade rounded-4 overflow-hidden shadow-soft" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/static/images/carousel-img1.png" class="d-block w-100" alt="Bright living room with large windows" loading="lazy" decoding="async" />
              </div>
              <div class="carousel-item">
                <img src="/static/images/carousel-img2.png" class="d-block w-100" alt="Cozy bedroom with neutral tones" loading="lazy" decoding="async" />
              </div>
              <div class="carousel-item">
                <img src="/static/images/carousel-img3.png" class="d-block w-100" alt="Modern kitchen with island seating" loading="lazy" decoding="async" />
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#gallery" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#gallery" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="col-lg-6">
          <h2 class="fw-bold mb-3">Designed for unwinding</h2>
          <p class="text-secondary">
            Sun-drenched loft with river views, thoughtfully stocked kitchen, plush bedding, and a serene workspace. Ideal for weekend escapes or longer stays.
          </p>
          <ul class="list-unstyled small">
            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Queen bed + sleeper sofa (sleeps 4)</li>
            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Washer & dryer • Full kitchen</li>
            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>55” 4K TV • Streaming apps</li>
            <li class="mb-2"><i class="bi bi-check2-circle text-success me-2"></i>Dedicated workspace • 300 Mbps Wi-Fi</li>
          </ul>
          <a href="#book" class="btn btn-accent"><i class="bi bi-calendar2-week me-2"></i>See Dates</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Amenities grid -->
  <section id="amenities" class="py-5">
    <div class="container">
      <h2 class="fw-bold mb-4">Amenities</h2>
      <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-wifi me-2 text-primary"></i>Fast Wi-Fi</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-thermometer-sun me-2 text-primary"></i>AC & heating</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-cup-hot me-2 text-primary"></i>Coffee & tea</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-droplet me-2 text-primary"></i>Rainfall shower</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-tv me-2 text-primary"></i>4K TV</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-shield-lock me-2 text-primary"></i>Self check-in</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-basket2 me-2 text-primary"></i>Laundry</div></div>
        <div class="col"><div class="p-3 border border-subtle rounded-4 h-100"><i class="bi bi-car-front me-2 text-primary"></i>Free parking</div></div>
      </div>
    </div>
  </section>

  <!-- Booking / Availability -->
  <section id="book" class="py-5 bg-light section-book">
    <div class="container">
      <div class="row g-4 align-items-stretch">
        <div class="col-lg-7">
          <div class="p-4 bg-white border border-subtle rounded-4 h-100">
            <h3 class="fw-bold mb-3">Check availability</h3>
            <form class="row g-3" oninput="updateQuote()">
              <div class="col-md-4">
                <label for="in" class="form-label">Check-in</label>
                <input type="date" id="in" class="form-control" required autocomplete="off" />
              </div>
              <div class="col-md-4">
                <label for="out" class="form-label">Check-out</label>
                <input type="date" id="out" class="form-control" required autocomplete="off" />
              </div>
              <div class="col-md-4">
                <label for="guests" class="form-label">Guests</label>
                <input type="number" id="guests" class="form-control" value="2" min="1" max="4" />
              </div>
              <div class="col-12 d-flex align-items-center justify-content-between">
                <div>
                  <div class="small text-secondary">Est. total</div>
                  <div id="quote" class="fs-4 fw-bold">$—</div>
                </div>
                <a class="btn btn-accent btn-lg" href="https://www.airbnb.com/" target="_blank" rel="noopener">
                  <i class="bi bi-airplane-engines me-2"></i>Request to Book
                </a>
              </div>
              <p class="small text-secondary mt-2 mb-0">
                <i class="bi bi-shield-check me-1 text-success"></i>Secure booking handled on Airbnb.
              </p>
            </form>
          </div>
        </div>
        <div class="col-lg-5">
          <div class="p-4 bg-white border border-subtle rounded-4 h-100 d-flex flex-column justify-content-between">
            <div>
              <h4 class="fw-bold">House rules</h4>
              <ul class="small text-secondary mb-4">
                <li>No smoking • No parties</li>
                <li>Quiet hours 10pm–8am</li>
                <li>Pets on request (fee may apply)</li>
              </ul>
              <h4 class="fw-bold">At a glance</h4>
              <ul class="small text-secondary">
                <li>Avg. nightly: <strong>$149</strong> • Cleaning: <strong>$40</strong></li>
                <li>2-night minimum • Weekly discount 10%</li>
                <li>Flexible self check-in after 3pm</li>
              </ul>
            </div>
            <div class="d-flex align-items-center gap-2">
              <img src="https://placehold.co/64x64/png?text=SH" class="rounded-circle" alt="Host avatar" width="48" height="48" />
              <div class="small">
                <strong>Hosted by Milo</strong><br />
                <span class="text-secondary">Superhost • 4.9 ★ (128 reviews)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Location -->
  <section id="location" class="py-5">
    <div class="container">
      <div class="row g-4">
        <div class="col-lg-6">
          <h2 class="fw-bold">Central & quiet</h2>
          <p class="text-secondary">
            Nestled by the river, a short stroll to cafés, bakeries, and the weekend farmers’ market. Trail access is 2 minutes from the door.
          </p>
          <ul class="list-unstyled small">
            <li class="mb-2"><i class="bi bi-geo-alt me-2 text-primary"></i>123 River St, Mohawk, NY</li>
            <li class="mb-2"><i class="bi bi-train-front me-2 text-primary"></i>15 min to Amtrak • 10 min to I-90</li>
            <li class="mb-2"><i class="bi bi-tree me-2 text-primary"></i>Steps to scenic riverwalk</li>
          </ul>
        </div>
        <div class="col-lg-6">
          <div class="ratio ratio-16x9 rounded-4 overflow-hidden shadow-soft map-embed">
            <iframe
              title="Map to Milo's Residence"
              src="https://www.google.com/maps?q=Mohawk,NY&output=embed"
              allowfullscreen
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Reviews -->
  <section id="reviews" class="py-5 bg-light">
    <div class="container">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="fw-bold mb-0">Guest reviews</h2>
        <div class="rating" aria-label="Average rating 4.9 out of 5">
          <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
          <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
          <i class="bi bi-star-half"></i>
          <span class="ms-2 small text-secondary">4.9 (128)</span>
        </div>
      </div>
      <div class="row g-4">
        <div class="col-md-4">
          <div class="p-4 bg-white border border-subtle rounded-4 h-100">
            <p class="mb-2">“Bright, spotless, and a perfect location. Check-in was a breeze.”</p>
            <div class="small text-secondary">— Alex, July 2025</div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-4 bg-white border border-subtle rounded-4 h-100">
            <p class="mb-2">“The river trail is steps away. Wi-Fi was fast for work calls.”</p>
            <div class="small text-secondary">— Morgan, June 2025</div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="p-4 bg-white border border-subtle rounded-4 h-100">
            <p class="mb-2">“Stylish space and super comfy bed. We’ll be back!”</p>
            <div class="small text-secondary">— Priya, May 2025</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-5">
    <div class="container">
      <h2 class="fw-bold mb-4">FAQ</h2>
      <div class="accordion" id="faq">
        <div class="accordion-item">
          <h2 class="accordion-header" id="q1">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#a1" aria-expanded="true" aria-controls="a1">
              Is parking included?
            </button>
          </h2>
          <div id="a1" class="accordion-collapse collapse show" data-bs-parent="#faq">
            <div class="accordion-body">Yes—one private on-site space is included at no charge.</div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="q2">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a2" aria-expanded="false" aria-controls="a2">
              Do you allow pets?
            </button>
          </h2>
          <div id="a2" class="accordion-collapse collapse" data-bs-parent="#faq">
            <div class="accordion-body">Small pets may be allowed with prior approval. A cleaning fee may apply.</div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="q3">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a3" aria-expanded="false" aria-controls="a3">
              What’s your cancellation policy?
            </button>
          </h2>
          <div id="a3" class="accordion-collapse collapse" data-bs-parent="#faq">
            <div class="accordion-body">Standard Airbnb moderate policy applies. See details during booking.</div>
          </div>
        </div>
      </div>
    </div>
  </section>
{{ end }}
